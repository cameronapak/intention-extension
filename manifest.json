{
  "manifest_version": 3,
  "name": "Intention Setter",
  "version": "1.0",
  "description": "Set intentions and manage browsing time",
  "permissions": ["storage", "tabs", "webNavigation"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.ts"]
    }
  ]
}